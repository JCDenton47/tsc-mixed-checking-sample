{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",

    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "allowUnreachableCode": false,

    "types": ["node"],

    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017"],

    "noEmit": false,
    "noEmitOnError": false,
    "strict": false,
    "allowJs": true
  },
  "include": [
    "src/a-best-practices.ts",
    "src/b-weak-typescript.ts",
    "src/c-never-checked-typescript.ts",
    "src/d-plain-javascript.js"
  ],
  "exclude": ["node_modules", "lib"]
}
